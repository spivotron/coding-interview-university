<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">MovieSpy</a>
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <ul class="nav navbar-nav">
        <button type="button" class="btn btn-default navbar-btn"><%= link_to "Sort By Date", sort_by_date_articles_path %></button>
        <button type="button" class="btn btn-default navbar-btn"><%= link_to "Sort By Title", sort_by_title_articles_path%></button>
        <button type="button" class="btn btn-default navbar-btn"><%= link_to "Sort By Genre", sort_by_genre_articles_path%></button>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Movies", articles_path %></li>
        <li><%= link_to "Reviews", reviews_path%></li>
      </ul>

    </div>

  </div><!-- /.container-fluid -->
</nav>
<div class="container">
<div class="row">

<% @articles.each do |article| %>

      <div class="col-sm-6 col-md-3">
        <div class="thumbnail">
          <img src="<%= article.image %>" />
          <div class="caption">
            <h3><%= article.title %></h3>
            <p><%= article.text %></p>
            <p><%= article.release_date %></p>
            <p><%= article.genre %></p>
            <div class="movieRatings">

              <% article.comments.each do |comment| %>
              <%= comment.commenter %> - "<%= comment.body %>"
              <div>
              <% comment.rating.times do  %>
                <span class="glyphicon glyphicon-star"></span>
              <% end %>
              <% (4-comment.rating).times do  %>
                <span class="glyphicon glyphicon-star-empty"></span>
              <% end %>
              </div>
              <% end %>
            </div>
            <%= link_to 'View More', article_path(article), :class=>"btn btn-primary"%>
          </div>
        </div>
      </div>
  <% end %>
</div>

<div class="col-md-12">
  <div class="panel panel-default">
  <div class="panel-heading"><h2>Recent Reviews </h2></div>
    <div class="panel-body">
      <% @recent_comments.each do |comment| %>
        <div class="review">
        <%= comment.commenter %> - "<%= comment.body %>"

        <% comment.rating.times do  %>
          <span class="glyphicon glyphicon-star"></span>
        <% end %>
        <% (4-comment.rating).times do  %>
          <span class="glyphicon glyphicon-star-empty"></span>
        <% end %>
        <p><%= link_to 'Read More about ' + comment.movie_name, article_path(comment.movieID) %></p>
        </div>
        <% end %>
    </div>
  </div>
</div>
</div>
